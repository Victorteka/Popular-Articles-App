<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.victorteka.nytarticles.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_articleDetailsFragment"
            app:destination="@id/articleDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleDetailsFragment"
        android:name="com.victorteka.nytarticles.ui.articledetails.ArticleDetailsFragment"
        android:label="article_details_fragment"
        tools:layout="@layout/article_details_fragment" >

        <argument
            android:name="articleInfo"
            app:argType="com.victorteka.data.network.dto.ArticleDto" />
    </fragment>
</navigation>